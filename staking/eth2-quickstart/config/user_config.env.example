# shellcheck shell=bash
# Example User Configuration for Eth2 Quick Start
# This file is auto-generated by configure.sh
# Copy this to user_config.env and customize as needed
#
# These values override defaults in exports.sh - only set what you want to change

# Network Selection (mainnet or holesky)
export ETH_NETWORK='mainnet'

# Your ETH address for validator rewards (CHANGE THIS!)
# Default from exports.sh shown below - replace with YOUR address
export FEE_RECIPIENT='0xa1feaF41d843d53d0F6bEd86a8cF592cE21C409e'

# Validator graffiti (shown on proposed blocks, max 32 bytes)
# Default from exports.sh
export GRAFITTI='SharedStake.org!'

# Selected Clients (set by configure.sh or manually)
# Execution: geth, erigon, reth, nethermind, besu, nimbus_eth1, ethrex
# Consensus: prysm, lighthouse, teku, nimbus, lodestar, grandine
export EXEC_CLIENT='geth'
export CONS_CLIENT='prysm'

# MEV Configuration (mev-boost, commit-boost, or none)
# mev-boost: Industry standard, stable, recommended
# commit-boost: Experimental modular alternative
export MEV_SOLUTION='mev-boost'

# Optional: Override max peers (default: 100)
# export MAX_PEERS=100

# Optional: Override checkpoint sync URL
# export PRYSM_CPURL='https://beaconstate.ethstaker.cc'
