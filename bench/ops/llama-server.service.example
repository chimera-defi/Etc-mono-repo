[Unit]
Description=llama.cpp OpenAI-compatible server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
Environment=LLAMA_MODEL_PATH=/models/qwen3.5-35b-instruct.gguf
Environment=LLAMA_HOST=127.0.0.1
Environment=LLAMA_PORT=8081
Environment=LLAMA_CTX=8192
Environment=LLAMA_THREADS=8
Environment=LLAMA_GPU_LAYERS=0
ExecStart=/tmp/pr245-codex-ajhl/repo/bench/ops/start-llama-server.sh
Restart=always
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
