# OpenAI API key (required for voice transcription)
OPENAI_API_KEY=sk-...

# Database connection
# Default: postgresql://localhost:5432/cadence_dev
DATABASE_URL=postgresql://localhost:5432/cadence_dev

# VPS connection (optional - runs in mock mode if not set)
VPS_ENDPOINT=
VPS_API_KEY=

# GitHub OAuth (optional - required for authentication)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# JWT configuration (optional - required for authentication)
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=7d

# Server configuration
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# Node environment (development/production)
NODE_ENV=development

# Production-only settings
# Note: In production (Fly.io), set these via `fly secrets set`
# Example: fly secrets set OPENAI_API_KEY=sk-...

# Optional: CORS settings
# CORS_ORIGIN=https://yourdomain.com

# Rate limiting (default: 100 requests per minute globally, 20 for voice endpoints)
RATE_LIMIT_MAX=100
